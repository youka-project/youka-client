<div class="page-header">
  <a href="#things/new" class="btn btn-primary pull-right">Create</a>
  <h1>Things: Index</h1>
</div>

<div class="things__list"></div>

<div class="text-center">
  <ul class="pagination">
    {{#if prev}}
      <li><a href="#things?page={{prev}}">&laquo;</a></li>
    {{else}}
      <li class="disabled"><a>&laquo;</a></li>
    {{/if}}

    {{#each pages}}
      {{#if current}}
        <li class="active"><a>{{page}} <span class="sr-only">(current)</span></a></li>
      {{else}}
        <li><a href="#things?page={{page}}">{{page}}</a></li>
      {{/if}}
    {{/each}}

    {{#if next}}
      <li><a href="#things?page={{next}}">&raquo;</a></li>
    {{else}}
      <li class="disabled"><a>&raquo;</a></li>
    {{/if}}
  </ul>
</div>
