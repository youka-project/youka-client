<div class="page-header">
  <div class="btn-toolbar pull-right" role="toolbar">
    <div class="btn-group">
      <button class="things__destroy btn btn-danger">Destroy</button>
    </div>
    <div class="btn-group">
      <button class="things__toggle btn btn-default">{{#unless active}}Activate{{else}}Deactivate{{/unless}}</button>
      <a href="#things/{{id}}/edit" class="btn btn-default">Edit</a>
    </div>
  </div>
  <h1>Things: Show</h1>
</div>

<div class="row">
  <div class="col-md-3">
    <div class="thumbnail">
      <div class="things__thumbnail" ></div>
    </div>
  </div>

  <div class="col-md-9">
    <div class="list-group">
      <div class="list-group-item">
        <h4 class="list-group-item-heading">Name</h4>
        <p class="list-group-item-text">{{name}}</p>
      </div>
      <div class="list-group-item">
        <h4 class="list-group-item-heading">Info</h4>
        <p class="list-group-item-text">{{info}}</p>
      </div>
      <div class="list-group-item">
        <h4 class="list-group-item-heading">State</h4>
        <p class="list-group-item-text">{{#if active}}Active{{else}}Inactive{{/if}}</p>
      </div>
    </div>
  </div>
</div>


