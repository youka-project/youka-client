<div class="index__billboard">
  <p>Bienvenue !</p>
  <img alt="Youka" src="assets/images/logo.png" class="logo"/>
  	{{#unless isLoggedIn}}
		<form class="index__form form-vertical" role="form" autocomplete="false">
			{{#if errors}}
				<div class="alert alert-warning">
				  <ul>
				    {{#each errors}}
				      <li>{{this}}</li>
				    {{/each}}
				  </ul>
				</div>
			{{/if}}

			<div class="form-group">
			  <input class="form-control" name="email" type="text" placeholder="email" value="test1@test.com">
			</div>

			<div class="form-group">
			  <input class="form-control" name="password" type="password" placeholder="mot de passe" value="test">
			</div>

			<div class="form-group">
			  <button type="submit" class="btn btn-home">Connexion</button>
			</div>
		</form>
		<div class="form-group">
			<span class="separator">ou</span>
		</div>
		<a href="#register" class="btn btn-home btn-home-inversed">Inscription</a>
	{{/unless}}
</div>
