<div class="index__billboard">
  <p>Bienvenue !</p>
  <h1>YOUKA</h1>
  	{{#unless isLoggedIn}}
		<form class="index__form form-vertical" role="form">
			{{#if errors}}
				<div class="alert alert-warning">
				  <ul>
				    {{#each errors}}
				      <li>{{this}}</li>
				    {{/each}}
				  </ul>
				</div>
			{{/if}}

			<div class="form-group">
			  <input class="form-control" name="email" type="text" placeholder="email" value="test@test.com">
			</div>

			<div class="form-group">
			  <input class="form-control" name="password" type="password" placeholder="mot de passe" value="test">
			</div>

			<div class="form-group">
			  <button type="submit" class="btn btn-primary">Submit</button>
			</div>
		</form>
	{{/unless}}
</div>
